<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2f0eb"

    tools:context=".ui.PosInTable">
<!--    android:background="#e7eef5"-->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תחרות שבועית"
        android:textColor="#8195bd"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_first_pleace"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_first_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="PoperNet"
        android:textColor="#8d97aa"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_second_place"
        app:layout_constraintStart_toEndOf="@+id/iv_third_place"
        app:layout_constraintTop_toBottomOf="@+id/iv_first_pleace" />

    <TextView
        android:id="@+id/tv_first_place_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="107.49 km"
        android:textColor="#8195bd"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_first_place_name"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/tv_first_place_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_place_name" />

    <ImageView
        android:id="@+id/iv_second_place"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toEndOf="@+id/iv_first_pleace"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_second_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="CactusBavarius"
        android:textColor="#8d97aa"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_second_place"
        app:layout_constraintStart_toStartOf="@+id/iv_second_place"
        app:layout_constraintTop_toBottomOf="@+id/iv_second_place" />

    <TextView
        android:id="@+id/tv_second_place_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="103.73 km"
        android:textColor="#8195bd"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_second_place_name"
        app:layout_constraintStart_toStartOf="@+id/tv_second_place_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_second_place_name" />

    <ImageView
        android:id="@+id/iv_third_place"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/third"
        app:layout_constraintEnd_toStartOf="@+id/iv_first_pleace"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_third_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ilalevy"
        android:textColor="#8d97aa"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_third_place"
        app:layout_constraintStart_toStartOf="@+id/iv_third_place"
        app:layout_constraintTop_toBottomOf="@+id/iv_third_place" />

    <TextView
        android:id="@+id/tv_third_place_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99/31 km"
        android:textColor="#8195bd"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_third_place_name"
        app:layout_constraintStart_toStartOf="@+id/tv_third_place_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_third_place_name" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="186dp"
        android:layout_height="104dp"
        android:src="@drawable/top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_place_distance" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tableRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

</androidx.constraintlayout.widget.ConstraintLayout>